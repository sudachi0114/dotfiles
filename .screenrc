# ----------
# screen configuration file
# ----------

# ----------
# encoding
# ----------
defutf8 on
defencoding utf8
encoding utf8 utf8

# ----------
# prefix key
# ----------
escape ^Tt

# ----------
# default shell
# ----------
shell $SHELL

# ----------
# colorize
# ----------
defbce on
term xterm-256color

# ----------
# status line
# ----------
hardstatus alwayslastline "%{= cd} %-w%{= dd} %n %t* %{-}%+w %= LoadAVG [%l] " 

# ----------
# buffer clear
# ----------
altscreen on


# ----------
# preference
# ----------

# scrooll
defscrollback 1000000   
